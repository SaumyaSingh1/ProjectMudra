<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#e0f2f1"
    android:layout_height="match_parent"
    tools:context=".ReferEarn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:background="@drawable/navbackgrnd"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="86dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginLeft="9dp"
            app:srcCompat="@drawable/ic_star_black_24dp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="216dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Earn Rewards"
            android:textColor="#07010C"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="385dp"
        android:layout_height="179dp"
        android:layout_gravity="center"
        android:focusable="true"
        android:outlineAmbientShadowColor="#55F5DE45"
        app:srcCompat="@drawable/refer" />

    <android.support.design.card.MaterialCardView
        android:layout_width="331dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="29dp"
        android:id="@+id/whatsapp"
        app:cardBackgroundColor="#18AA2F"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp">

        <LinearLayout

            android:layout_width="344dp"
            android:layout_height="57dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="52dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginLeft="28dp"
                app:srcCompat="@drawable/ic_share_black_24dp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="208dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Invite Via WhatsApp"
                android:textColor="#0C020C"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.design.card.MaterialCardView>


</LinearLayout>