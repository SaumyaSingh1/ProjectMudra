<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#2C7B8F"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#E4D8D8"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="center"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/mudra" />

        <android.support.v7.widget.CardView
            android:layout_width="41dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:id="@+id/btnmenu"
            android:layout_marginLeft="29dp"
            app:cardBackgroundColor="#4B9EB3"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <ImageView

                android:layout_width="37dp"
                android:layout_height="34dp"
                android:layout_gravity="center"

                app:srcCompat="@drawable/ic_menu_black_24dp" />
        </android.support.v7.widget.CardView>
        <!--<ImageView-->
        <!--android:id="@+id/menu"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="43dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginLeft="50dp"-->
        <!--android:src="@drawable/ic_menu_black_24dp" />-->

    </LinearLayout>

    <TextView
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="ONE STOP SOLUTION"
        android:textColor="#fff"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="13dp"
        android:fontFamily="sans-serif-light"
       android:padding="5dp"
        android:shadowColor="#041104"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="24"
        android:text="FOR ALL LOANS"
        android:textColor="#fff"
        android:textSize="29dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="43dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="easy and quick process optimized for your special needs"
        android:textColor="#fff"
        android:fontFamily="serif-monospace"
        android:textSize="15dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/apply"
        android:layout_width="201dp"
        android:layout_height="40dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        app:cardBackgroundColor="#142480"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="APPLY NOW"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textStyle="bold"

            />

    </android.support.v7.widget.CardView>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="219dp"
        android:layout_gravity="center"
        android:id="@+id/btn"
        android:background="@drawable/header"
        android:src="@drawable/header" />

    <Button
        android:id="@+id/click"
        android:layout_width="211dp"
android:layout_marginTop="19dp"
        android:layout_height="45dp"
        android:layout_gravity="center"

        android:background="@drawable/buttondsn"
        android:text="GET STARTED"
        android:textStyle="bold" />




</LinearLayout>